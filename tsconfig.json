{
  "compilerOptions": {
    "target": "es2022",
     "module": "NodeNext",    // or "ESNext"
    "moduleResolution": "NodeNext",  // Matches the module setting
    "lib": ["ESNext","DOM"],
    "declaration": true, // 启用类型声明文件的生成
    "rootDir": "src",
    "outDir": "lib",
    "useDefineForClassFields": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "package.json", "tests/**/*"],
  "exclude": ["node_modules", "./lib/**/*"]
}
